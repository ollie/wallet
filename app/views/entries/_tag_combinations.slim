- tag_combinations = TagCombination.ordered

- if tag_combinations.any?
  ul.list-unstyled
    - tag_combinations.each do |tag_combination|
      li
        a.js-tag-combination href="#"
          - tag_combination.tags.each do |tag|
            span.badge>(
              class=('badge-dark' if tag.dark?)
              class=('badge-light' if !tag.color || tag.light?)
              style=("background-color: #{tag.color};" if tag.color)
              data-tag-id=tag.id
            ) = tag.name
